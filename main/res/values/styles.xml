<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="Large" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="Bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Normal" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#8A5D3B</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Body" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Date" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0085FF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Price" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FF0605</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="ItalicBold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="White" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="Green" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#1C8A3B</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="DarkBule" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#1C366F</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="EditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SearchViewStyleMyApp" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
         <item name="queryBackground">@drawable/searchview_style</item>
        ...
        <!-- note that this is how you stye your hint icon -->
        <item name="searchHintIcon">@drawable/ic_menu_search</item>
    </style>
</resources>
